# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/nestjs_clean_architecture
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=nestjs_clean_architecture

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=nestjs-clean-architecture
KAFKA_GROUP_ID=nestjs-clean-architecture-group

# BullMQ / Redis Queue
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379

# Logging
LOG_LEVEL=debug

# Security
ALLOWED_ORIGINS=http://127.0.0.1:3000,http://127.0.0.1:4200
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
